{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "./vendor/bin/sail npm run dev:sail",
        "dev:sail": "vite dev",
        "build": "./vendor/bin/sail npm run build:sail",
        "build:sail": "vite build",
        "sail": "./vendor/bin/sail",
        "dev:refresh": "./vendor/bin/sail composer dump-autoload -o && ./vendor/bin/sail artisan optimize:clear && ./vendor/bin/sail artisan queue:restart",
        "test": "npm run dev:refresh && ./vendor/bin/sail artisan test",
        "test:fast": "./vendor/bin/sail artisan test",
        "up": "./vendor/bin/sail up -d",
        "restart": "./vendor/bin/sail restart",
        "stop": "./vendor/bin/sail down",
        "db:truncate": "./vendor/bin/sail artisan db:truncate",
        "queue:logs": "./vendor/bin/sail logs -f queue"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.1.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.1.3",
        "typescript": "^5.9.3"
    }
}
